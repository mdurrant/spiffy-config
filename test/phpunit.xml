<phpunit bootstrap="./bootstrap.php" colors="true">
    <testsuite name="SpiffyConfig Module Tests">
        <directory>./SpiffyConfigTest</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory suffix=".php">../src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="../build/logs/clover.xml"/>
    </logging>
</phpunit>
